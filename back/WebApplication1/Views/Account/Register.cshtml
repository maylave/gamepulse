@model WebApplication1.Models.RegisterViewModel
@{
    ViewData["Title"] = "Регистрация";
}
<link rel="stylesheet" href="~/css/base.css" />
<div class="login-container">
    <div class="sign">Создать аккаунт</div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }
    @if (TempData["Debug"] != null)
{
    <div class="alert alert-info">@TempData["Debug"]</div>
}
    <form asp-action="Register" method="post">
        @Html.AntiForgeryToken()
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Name">Имя</label>
            <input asp-for="Name" class="input-data" placeholder="" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Email">Электронная почта</label>
            <input asp-for="Email" class="input-data" placeholder="" autocomplete="email" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Password">Пароль</label>
            <input asp-for="Password" type="password" class="input-data" placeholder="" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Age">Возраст</label>
            <input asp-for="Age" type="number" class="input-data" min="13" max="120" />
            <span asp-validation-for="Age" class="text-danger"></span>
        </div>

        <button type="submit" class="submit-data">Зарегистрироваться</button>
        <div class="link">Уже есть аккаунт? <a asp-action="Account/Login">Войти</a></div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}